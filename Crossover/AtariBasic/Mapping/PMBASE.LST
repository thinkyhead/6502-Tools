;
; Mapping the Atari Page 136
; Working PMBASE example
;
0 N0=0:N1=1:N255=255:HPOS=53248:N=100:GOTO 5
1 POKE HPOS,N:N=N+N1:IF N<N255 THEN 1
2 POKE HPOS,N:N=N-N1:IF N>N0 THEN 2
3 GOTO 1
5 MTOP=PEEK(106)
10 POKE 106,MTOP-8:GRAPHICS 8:SETCOLOR 2,3,4
20 POKE 559,62:POKE HPOS,N:POKE 704,160:POKE 53256,2
30 MEM=MTOP-16
40 POKE 54279,MEM:POKE 53277,3:START=MEM*256+1024
50 FOR LOOP=100 TO 119:READ BYTE:POKE START+LOOP,BYTE:NEXT LOOP
55 GOTO N1
60 DATA 16,16,56,40,40,56,40,40,40,40,124
70 DATA 84,124,84,254,146,254,170,170,254

